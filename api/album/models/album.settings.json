{
  "kind": "collectionType",
  "collectionName": "albums",
  "info": {
    "name": "album",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": false
  },
  "attributes": {
    "title": {
      "type": "string"
    },
    "tracks": {
      "collection": "track",
      "via": "album"
    },
    "title_eng": {
      "type": "string",
      "required": true,
      "minLength": 3,
      "maxLength": 100
    },
    "description": {
      "type": "richtext",
      "required": true
    },
    "description_eng": {
      "type": "richtext",
      "required": true
    },
    "short_description": {
      "type": "text",
      "required": true
    },
    "short_description_eng": {
      "type": "text",
      "required": true
    },
    "date": {
      "type": "date",
      "required": true
    },
    "cover": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "CD",
        "DVD"
      ],
      "default": "CD"
    },
    "ya_music_src": {
      "type": "string",
      "regex": "(^\\s*$|https?:\\/\\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\\/\\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})",
      "required": true
    },
    "itunes_src": {
      "type": "string",
      "regex": "(^\\s*$|https?:\\/\\/(?:www\\.|(?!www))[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|www\\.[a-zA-Z0-9][a-zA-Z0-9-]+[a-zA-Z0-9]\\.[^\\s]{2,}|https?:\\/\\/(?:www\\.|(?!www))[a-zA-Z0-9]+\\.[^\\s]{2,}|www\\.[a-zA-Z0-9]+\\.[^\\s]{2,})"
    }
  }
}
